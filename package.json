{
    "name": "subscription-management-service",
    "version": "__ci_managed__",
    "description": "DDD Subscription/User/Authentication service (real life example)",
    "main": "build/index.js",
    "imports": {
        "#app/*": "./build/*"
    },
    "type": "module",
    "scripts": {
        "start": "node .",
        "build": "rm -fr ./build && tsc",
        "dev": "tsx watch ./src/index.ts",
        "test": "node --import tsx ./src/__tests__/test.global.runner.ts",
        "prettier:check": "prettier -l .",
        "prettier:fix": "prettier --write .",
        "eslint": "eslint \"**/*.{ts,tsx}\"",
        "eslint:fix": "eslint . --ext .ts --fix",
        "lint": "npm run eslint && npm run prettier:check",
        "lint:fix": "npm run eslint:fix && npm run prettier:fix",
        "ts:verify": "tsc --noEmit",
        "typeorm": "tsx ./node_modules/typeorm/cli.js -d ./src/configs/typeorm.config.ts",
        "typeorm:migrate": "npm run typeorm -- migration:run",
        "typeorm:create": "npm run typeorm -- migration:create -n",
        "typeorm:revert": "npm run typeorm -- migration:revert",
        "typeorm:generate": "f() { npm run typeorm -- migration:generate -p \"./src/migrations/$@\"; }; f",
        "prepare": "husky"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ernestdolog/subscription-management-service.git"
    },
    "author": "Ernest Dolog <ernest.dolog@gmail.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ernestdolog/subscription-management-service.git/issues"
    },
    "homepage": "https://github.com/ernestdolog/subscription-management-service.git#readme",
    "devDependencies": {
        "@commitlint/cli": "^19.7.1",
        "@commitlint/config-conventional": "^19.7.1",
        "@eslint/js": "^9.19.0",
        "@faker-js/faker": "^8.4.0",
        "@types/convict": "^6.1.6",
        "@typescript-eslint/eslint-plugin": "^8.22.0",
        "@typescript-eslint/parser": "^8.22.0",
        "commitlint": "^19.7.1",
        "cross-fetch": "^4.0.0",
        "eslint": "^9.19.0",
        "globals": "^15.14.0",
        "prettier": "^3.2.4",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.23.0"
    },
    "dependencies": {
        "@aws-sdk/client-cognito-identity-provider": "^3.744.0",
        "@aws-sdk/client-ses": "^3.744.0",
        "@fastify/cors": "^10.0.2",
        "@fastify/request-context": "^6.0.2",
        "@fastify/swagger": "^9.4.2",
        "@fastify/swagger-ui": "^5.2.1",
        "@fastify/type-provider-typebox": "^5.1.0",
        "@sinclair/typebox": "^0.32.35",
        "aws-jwt-verify": "^4.0.1",
        "aws-msk-iam-sasl-signer-js": "^1.0.0",
        "convict": "^6.2.4",
        "dotenv": "^16.4.1",
        "es-main": "^1.3.0",
        "eslint-plugin-unused-imports": "^4.1.4",
        "fastify": "^5.2.1",
        "glob-promise": "^6.0.5",
        "husky": "^9.1.7",
        "kafkajs": "^2.2.4",
        "pg": "^8.13.1",
        "pino": "^9.6.0",
        "reflect-metadata": "^0.2.1",
        "tsx": "^4.19.2",
        "typeorm": "^0.3.20",
        "typeorm-extension": "^3.6.3",
        "typeorm-naming-strategies": "^4.1.0"
    }
}
